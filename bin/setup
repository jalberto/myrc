#!/bin/bash

MYRC_DIR="$HOME/SparkleShare/github.com/myrc/"

function backpath() {
  if [ -f $1 ] || [ -f $1 ]; then
    mv $1 $1.bak
  fi
}

function symlink() {
  backpath $2
  ln -sf $1 $2
}

function install_rcs() {
  echo " * Install RC files..."

  symlink $MYRC_DIR/gitconfig $HOME/.gitconfig
}

function install_bin() {
  echo " * Install Bin dir..."

  symlink $MYRC_DIR/bin $HOME/bin
  chmod +x $HOME/bin/*
}

install_rcs
install_bin
