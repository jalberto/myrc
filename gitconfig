[user]
	name = JA
	email = ja@josealberto.org
[core]
	excludesfile = ~/.gitignore
	editor = nvim -f
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	co = checkout
	ci = commit
	ca = commit -a
	cia = commit -a
	smi = submodule init
	smu = submodule update
	sm = submodule
	st = status -sb
	br = branch
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	sl = stash list --pretty=format:'%Cblue%h %Cred* %C(yellow)%s'
	sa = stash apply
	ss = stash save
	df = diff --word-diff
	merc = merge --no-ff
	merq = merge --squash
[push]
	default = current
[diff]
	tool = meld
[merge]
	tool = fugitive
	conflictstyle = diff3
[difftool]
	prompt = false
[mergetool "mymeld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE"
[help]
	autocorrect = 1
[mergetool "fugitive"]
	cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"
